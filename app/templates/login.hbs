<div class="row">

  {{outlet}}
  {{!-- app/templates/login.hbs --}}

  <form {{action "authenticate" on="submit"}}>

    <div class="form-group">
      <label for="identification">Login</label>
      {{input placeholder="Sudo Key" value=identification}}
    </div>

    <div class="form-group">
      <button type="submit">Login</button>
      {{#if errorMessage}}
        <p>{{errorMessage}}</p>
      {{/if}}
    </div>
  </form>

</div>
