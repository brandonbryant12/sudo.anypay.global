{{outlet}}

<div class="container">

  <h2>Coins</h2>

  <div class="row">

    <table class='table'>
      <thead>
        <td></td>
        <td></td>
        <td>Active</td>

      </thead>

      {{#each coins as |coin| }}


        <tr>

          <td>{{coin.code}}</td>

          <td>{{coin.name}}</td>
          <td>

            {{#if coin.unavailable }}
              <input type="checkbox" data-id={{coin.code}}
              onchange={{action "activateCoin" coin.code}}>
            {{else}}
              <input type="checkbox" checked 
              data-id={{coin.code}} onchange={{action "deactivateCoin" coin.code}}>
            {{/if}}
        
          </td>

        </tr>

      {{/each}}

    </table>

  </div>

</div>
